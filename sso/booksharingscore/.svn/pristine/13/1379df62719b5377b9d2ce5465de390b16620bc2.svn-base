	<script type="text/javascript">
	    
	    function updateSelectWithCache(className, key, url) {
	    	if (sessionStorage[key] && sessionStorage[key].length > 0) {
				var list = JSON.parse(sessionStorage[key]);
				updateSelect(list, className);
			} else {
			    $.get(url, {}, function(result){
				    if (result){
					    var list = result.rows;
					    sessionStorage[key] = JSON.stringify(list);
					    updateSelect(list, className);
				    } else {
					    alert('系统错误');
				    }
			    },'json');
			}
	    }
	    
		function statusFormatter(value, row, index) {
		     if (value == 1) {
		    	 return "待开课";
		     }
		
		     if (value == 2) {
		    	 return "待评分";
		     }
		     
		     if (value == 3) {
		    	 return "已评分";
		     }
		}
		
		$(function(){
			$('#courseTable').bootstrapTable({
				pagination: true,
				pageNumber:1,
				pageSize:10,
				pageList: [1, 10, 25, 50],
				cache:false,
				sidePagination: "server",
				height:530,
			    columns: [{
			        checkbox: true,
			        select: false,
			    }, {
			        field: 'title',
			        title: '主题'
			    }, {
			        field: 'courseDate',
			        title: '时间'
			    }, {
			        field: 'address',
			        title: '地点'
			    }, {
			        field: 'lecturerName',
			        title: '讲师'
			    }, {
			        field: 'status',
			        title: '状态',
			        formatter: statusFormatter
			    }, {
			        field: 'id',
			        title: 'id',
			        visible: false
			    }],
			    url : '/booksharingscore/course/search',
			    queryParams : function (params) {
                    var temp = {   
                        rows: params.limit,                         //页面大小
                        page: (params.offset / params.limit) + 1,   //页码
                        sort: params.sort,      //排序列名  
                        sortOrder: params.order //排位命令（desc，asc） 
                    };
                    return temp;
                },
		        clickToSelect: true
			});
			
			$('.form_date').datetimepicker({
				format: 'yyyy-mm-dd',
		        language:  'zh-CN',
		        weekStart: 1,
		        todayBtn:  1,
				autoclose: 1,
				todayHighlight: 1,
				startView: 2,
				minView: 2,
				forceParse: 0
		    });
		});
	</script>

